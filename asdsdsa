<div class="card">
    <h2>leaf check</h2>
    <div class="subtitle">Upload an image to continue</div>

    <label class="upload-btn">
        Choose Image
        <input type="file" accept="image/*" onchange="predictImage(event)">
    </label>

    <div class="preview" id="previewBox">
        <img id="preview">
    </div>

    <div id="result"></div>

    <div class="footer">v.67</div>
</div>

<script>
const MODEL_URL = "https://teachablemachine.withgoogle.com/models/7peZP1TMX/";
let model;

async function loadModel() {
    model = await tmImage.load(
        MODEL_URL + "model.json",
        MODEL_URL + "metadata.json"
    );
}
loadModel();

async function predictImage(event) {
    if (!model) return;

    const img = document.getElementById("preview");
    const previewBox = document.getElementById("previewBox");
    const result = document.getElementById("result");

    img.src = URL.createObjectURL(event.target.files[0]);
    previewBox.style.display = "block";
    result.textContent = "Processing...";

    img.onload = async () => {
        const predictions = await model.predict(img);
        const best = predictions.reduce((a, b) =>
            a.probability > b.probability ? a : b
        );

        result.innerHTML = `
            <div class="label">${best.className}</div><br>
            <div class="confidence">${(best.probability * 100).toFixed(1)}%</div>
        `;
    };
}
</script>

